# We use /**/ so you can safely the webroot directory 
# from `web` to whatever you need (e.g `docroot`).

# Ignore directories generated by Composer
/bin/
/drush/contrib/
/drush/drushrc.php
/vendor/
/certificates/*.key
/**/core/
/**/modules/contrib/
/**/themes/contrib/
/**/profiles/contrib/
/**/libraries/

# Ignore Drupal Scaffold files
# @see https://github.com/drupal-composer/drupal-scaffold
/**/.csslintrc
/**/.editorconfig
/**/.eslintignore
/**/.eslintrc
/**/.eslintrc.json
/**/.gitattributes
/**/.htaccess
/**/index.php
/**/robots.txt
/**/sites/default/default.services.yml
/**/sites/default/default.*
/**/sites/example.sites.php
/**/update.php
/**/web.config

# Do NOT ignore settings files because we customize them.
# Those files are also exclude from Drupal Scaffold (see composer.json).
# /**/sites/example.services.development.yml
# /**/sites/example.settings.php
# /**/sites/example.settings.local.php

# Ignore sensitive information
/**/sites/*/settings.php
/**/sites/*/settings.local.php
/**/sites/*/salt.txt

# Ignore Drupal's file directory
/**/sites/*/files/

# Ignore SimpleTest multi-site environment.
/**/sites/simpletest

# Ignore dev files
/.idea/
/.vscode/
/.env
/php.ini
/database
.lando.yml
.drush.yml
.gitstats.*

# Ignore junk files
.DS_Store
*.css.map
node_modules
bower_modules
*.log
