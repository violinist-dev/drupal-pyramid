{
  "name": "drupal-example",
  "version": "1.0.0",
  "description": "A wonderful Drupal 8 composer-based project.",
  "main": "composer.json",
  "dependencies": {},
  "devDependencies": {
    "gitinspector": "^0.5.0-dev-1"
  },
  "config": {
    "theme_path": "web/themes/custom/pyramid",
    "gitstats_args": "--file-types=html,twig,php,theme,module,scss,js,patch --timeline=true --hard=true --metrics=true --grading=true"
  },
  "scripts": {
    "stats": "./node_modules/.bin/gitinspector --format=html $npm_package_config_gitstats_args > gitstats.html",
    "do": "cd $npm_package_config_theme_path &&",
    "reset": "cd $npm_package_config_theme_path && npm run reset",
    "build": "cd $npm_package_config_theme_path && npm run build",
    "watch": "cd $npm_package_config_theme_path && npm run watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": {
    "name": "Matthieu SCARSET",
    "email": "m@matthieuscarset.com",
    "url": "https://matthieuscarset.com"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:drupal-pyramid/drupal-pyramid.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/drupal-pyramid/drupal-pyramid/issues"
  },
  "homepage": "https://github.com/drupal-pyramid/drupal-pyramid#readme"
}
